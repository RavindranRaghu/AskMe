<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ChaT Bot</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/simplebar.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/simplebar.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="color:black;padding-top:10px;" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ChaT Bot", "Index", "Home", new { area = "" }, new { @class = "page-header" })               
            </div>
            @*<div style="padding-top:10px;"> <img src="~/Content/img/logo.png" /></div>*@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-right">
                    <li class="list-group-item"> Arvind <span class="glyphicon glyphicon-user"> </span></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TCS Business Process Solution</p>
        </footer>
    </div>
</body>
</html>